{
  "manifest_version": 2,
 
  "name": "GTmetrix Analyzer Plugin",
  "description": "This extension will analyze a page using GTmetrix",
  "version": "1.0",
  "browser_action": {
   "default_icon": "icon.png"
  },
  //defino o background aqui, ele será o responsável por falar quais scripts serão executados ao clicar na extensão
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
   "activeTab",
   "http://localhost/*"
   ],
   "web_accessible_resources": ["jquery.js","script.js","material.css","material.js","funcoes.js"]
}